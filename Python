from selenium import webdriver
from selenium.webdriver.chrome.options import Options
from bs4 import BeautifulSoup
import time

def extract_display_text_selenium(url):
    options = Options()
    options.add_argument('--headless')
    options.add_argument('--disable-gpu')
    driver = webdriver.Chrome(options=options)

    try:
        driver.get(url)
        time.sleep(3)  # wait for JavaScript to load content
        html = driver.page_source
    finally:
        driver.quit()

    soup = BeautifulSoup(html, 'html.parser')
    result = []

    for class_name in ['Display1', 'Display2']:
        divs = soup.find_all('div', class_=class_name)
        for div in divs:
            text = div.get_text(strip=True)
            if text:
                result.append((class_name, text))

    return result

# Example usage
url = "https://example.com"  # Replace with actual URL
texts = extract_display_text_selenium(url)

for class_name, text in texts:
    print(f"[{class_name}] {text}")
