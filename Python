import subprocess

def is_user_in_group(group_name):
    result = subprocess.run(
        ["whoami", "/groups"],
        capture_output=True,
        text=True
    )

    # Normalize both to lowercase for case-insensitive matching
    output = result.stdout.lower()
    group_name = group_name.lower()

    # Check if the group name exists in any line
    return any(group_name in line for line in output.splitlines())

# Example usage
group_to_check = "FinanceTeam-India-Bangalore-Prod-Users"
if is_user_in_group(group_to_check):
    print("User is part of the group")
else:
    print("User is NOT part of the group")
