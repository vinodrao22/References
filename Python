import pdfplumber

# Load PDF
pdf_path = r"C:\path\to\your\file.pdf"  # <-- Change this to your file path

with pdfplumber.open(pdf_path) as pdf:
    page = pdf.pages[179]  # Page 180 (index starts at 0)
    text = page.extract_text()

    if not text:
        print("No text found on page 180.")
    else:
        print("=== Raw Text from Page 180 ===")
        print(text)

        # Check if target section line is present
        if "1 Remain ethical and independent during our audit engagements [ISA | 644]" in text:
            print("\n>>> Section title FOUND on page 180!")
        else:
            print("\n>>> Section title NOT found on page 180.")
