from selenium import webdriver
from selenium.webdriver.edge.options import Options
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
from bs4 import BeautifulSoup

def extract_display_text_edge(url):
    options = Options()
    options.use_chromium = True
    # options.add_argument('--headless')  # Uncomment for headless mode
    options.add_argument('--disable-gpu')
    options.add_argument('--no-sandbox')

    driver = webdriver.Edge(options=options)  # assumes msedgedriver is in PATH

    try:
        driver.get(url)

        # Wait until at least one of the divs appears
        WebDriverWait(driver, 10).until(
            EC.presence_of_element_located((By.CLASS_NAME, "Display1"))
        )

        html = driver.page_source

    finally:
        driver.quit()

    soup = BeautifulSoup(html, 'html.parser')
    result = []

    for class_name in ['Display1', 'Display2']:
        divs = soup.find_all('div', class_=class_name)
        for div in divs:
            text = div.get_text(strip=True)
            if text:
                result.append((class_name, text))

    return result

# Example usage
url = "https://example.com"  # Replace with your actual URL
texts = extract_display_text_edge(url)

for class_name, text in texts:
    print(f"[{class_name}] {text}")
