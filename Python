import pdfplumber
import re

pdf_path = r"C:\path\to\your\file.pdf"

with pdfplumber.open(pdf_path) as pdf:
    page = pdf.pages[15]  # Page 16
    text = page.extract_text()

    if not text:
        print("No text found.")
    else:
        normalized_text = ' '.join(text.splitlines())
        print("Normalized Text:")
        print(normalized_text)

        # Final regex that captures full section header including [ISA | 747]
        pattern = r"(\d+(?:\.\d+)*\s+.+?ISA\s*\|\s*[^]+)"
        matches = re.findall(pattern, normalized_text)

        print("\n>>> Section Headers Found:")
        for match in matches:
            print(match.strip())
