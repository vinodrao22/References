from selenium import webdriver
from selenium.webdriver.chrome.options import Options
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
from bs4 import BeautifulSoup

def extract_display_text_selenium(url):
    options = Options()
    options.add_argument('--no-sandbox')
    options.add_argument('--disable-gpu')
    # options.add_argument('--headless')  # Uncomment for headless mode

    driver = webdriver.Chrome(options=options)

    try:
        driver.get(url)

        # Wait up to 10 seconds for Display1 or Display2 divs to appear
        WebDriverWait(driver, 10).until(
            EC.presence_of_element_located((By.CLASS_NAME, "Display1"))
        )

        html = driver.page_source

    except Exception as e:
        print(f"Error loading page or locating element: {e}")
        return []

    finally:
        driver.quit()

    soup = BeautifulSoup(html, 'html.parser')
    result = []

    for class_name in ['Display1', 'Display2']:
        divs = soup.find_all('div', class_=class_name)
        for div in divs:
            text = div.get_text(strip=True)
            if text:
                result.append((class_name, text))

    return result

# Example usage
url = "https://example.com"  # Replace with your real URL
texts = extract_display_text_selenium(url)

for class_name, text in texts:
    print(f"[{class_name}] {text}")
